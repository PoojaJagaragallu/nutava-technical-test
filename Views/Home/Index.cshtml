@{
    ViewBag.Title = "Home Page";
}
<h2>Number to word converter</h2>
<hr />
<fieldset>
    <form asp-action="GeInputNumberInWords" asp-controller="Home" method="POST" data-ajax="true" data-ajax-update="#divResultDetails">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label(" ", labelText: "Amount:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="number" class="" required name="inputAmount" id="inputAmount" min="0" max=@ViewBag.MaxInput step=".01">
                    <span class="text-danger"> ** only numeric input allowed </span>
                </div>
            </div>
            <div class="form-group">
                <div id="divResultDetails"></div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-primary">Convert</button>
                </div>
            </div>
        </div>
    </form>
</fieldset>  